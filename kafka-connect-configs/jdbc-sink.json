{
  "name": "payments-sink-connector",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": "1",
    "topics": "transactions-validated",

    "connection.url": "jdbc:postgresql://db:5432/paystream",
    "connection.user": "postgres",
    "connection.password": "postgres",

    "auto.create": "true",
    "table.name.format": "validated_transactions",

    "insert.mode": "insert",
    "pk.mode": "none",

    "connection.attempts": "50",
    "connection.backoff.ms": "5000",

    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "key.converter.schemas.enable": "false",

    "value.converter": "io.confluent.connect.avro.AvroConverter",
    "value.converter.schemas.enable": "true",
    "value.converter.schema.registry.url": "http://schema-registry:8085"
  }
}
